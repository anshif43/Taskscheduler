@model Pager
<div class="container">
    @if (Model.Totalpages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.Currentpage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Taskscheduler" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Taskscheduler" asp-action="Index" asp-route-pg="@(Model.Currentpage - 1)">Previous</a>
                </li>
            }
            @for (var pge = Model.Startpage; pge <= Model.Endpage; pge++)
            {
                <li class="page-item @(pge == Model.Currentpage ? "active":"")">
                    <a class="page-link" asp-controller="Taskscheduler" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (Model.Currentpage < Model.Totalpages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Taskscheduler" asp-action="Index" asp-route-pg="@(Model.Currentpage+1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="Taskscheduler" asp-action="Index" asp-route-pg="@(Model.Totalpages)">Last</a>
                </li>
            }
        </ul>
    }
</div>